<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="@dimen/dp_8"
        android:elevation="@dimen/dp_8">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/img_product"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/sp_16">

            </androidx.appcompat.widget.AppCompatImageView>
            <com.farzin.digimarket.customView.BNazaninBoldTextView
                android:id="@+id/txt_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_margin="@dimen/sp_16"
                android:layout_toStartOf="@+id/img_product"
                android:textColor="@color/black" />

            <com.farzin.digimarket.customView.IranSansTextView
                android:id="@+id/txt_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/img_delete"
                android:layout_centerVertical="true"
                android:layout_alignParentBottom="true"
                android:layout_margin="@dimen/sp_16"
                android:textColor="@color/red" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/img_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                app:srcCompat="@drawable/close"
                app:tint="@color/red" />




        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>